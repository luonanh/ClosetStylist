<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.closetstylist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <!-- Save images to external SD card -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Camera -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <!-- GPS or Network provider for Location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Audio in case want to do text-to-speech -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Map just in case -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.closetstylist.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- THIS IS THE ADD ITEM ACTIVITY -->
        <activity android:name="com.example.closetstylist.AddItemActivity" >
        </activity>
        <!-- THIS IS THE MY CLOSET ACTIVITY -->
        <activity android:name="com.example.closetstylist.MyClosetActivity" >
        </activity>
        <!-- THIS IS THE VIEW ITEM ACTIVITY -->
        <activity android:name="com.example.closetstylist.ViewItemActivity" >
        </activity>
        <!-- THIS IS THE EDIT ITEM ACTIVITY -->
        <activity android:name="com.example.closetstylist.EditItemActivity" >
        </activity>
        <!-- THIS IS THE OUTFIT OF THE DAY ACTIVITY -->
        <activity android:name="com.example.closetstylist.OutfitActivity" >
        </activity>
        <!-- THIS IS THE REGISTER ACTIVITY -->
        <activity android:name="com.example.closetstylist.RegisterActivity" >
        </activity>
        <!-- THIS IS THE VIEW USER PROFILE ACTIVITY -->
        <activity android:name="com.example.closetstylist.ViewUserProfileActivity" >
        </activity>
        
    </application>

</manifest>
