<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp" >

        <RelativeLayout
            android:id="@+id/addItemRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- name label/value pair -->

            <TextView
                android:id="@+id/add_item_label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/add_item_value_name"
                android:layout_alignBottom="@+id/add_item_value_name"
                android:layout_alignParentLeft="true"
                android:text="@string/add_item_label_name" />

            <EditText
                android:id="@+id/add_item_value_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:inputType="text"
                android:text="@string/add_item_value_name_default_value" />

            <!-- description label/value pair -->

            <TextView
                android:id="@+id/add_item_label_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/add_item_value_description"
                android:layout_alignBottom="@+id/add_item_value_description"
                android:layout_alignParentLeft="true"
                android:text="@string/add_item_label_description" />

            <EditText
                android:id="@+id/add_item_value_description"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/add_item_value_name"
                android:inputType="text"
                android:text="@string/add_item_value_description_default_value" />

            <!-- addImage label/value pair -->

            <TextView
                android:id="@+id/add_item_label_image_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/add_item_value_image_link"
                android:layout_alignBottom="@+id/add_item_value_image_link"
                android:layout_alignParentLeft="true"
                android:text="@string/add_item_label_image_link" />

            <Button
                android:id="@+id/add_item_value_image_link"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/add_item_value_description"
                android:onClick="addPhotoClicked"
                android:text="@string/add_item_value_image_link" />

            <TextView
                android:id="@+id/add_item_value_image_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/add_item_value_image_link"
                android:text="" />


            <!-- tags label/value pair -->

        </RelativeLayout>
    </ScrollView>
    
    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="32dp"
        android:text="@string/add_item_register" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/add_item_reset" />

    <Button
        android:id="@+id/discard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp"
        android:text="@string/add_item_discard" />
</RelativeLayout>
